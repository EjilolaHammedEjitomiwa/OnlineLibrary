<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/calling_code"
            android:gravity="center"
            android:text="Account Profile"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calling_code"
                android:gravity="center"
                android:text="Account Type = "
                android:textColor="@color/black"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_accountType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/calling_code"
                android:gravity="center"
                android:text="Author"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/profile_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/calling_code"
            android:padding="10dp"
            android:text="Ejilola Hammed Ejitomiwa"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profile_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/calling_code"
            android:padding="10dp"
            android:text="geotechbrain@gmail.com"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/profile_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/input_bg"
            android:fontFamily="@font/calling_code"
            android:padding="10dp"
            android:text="0909792472784"
            android:textSize="14sp" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/profile_addBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/calling_code"
            android:paddingStart="40dp"
            app:cornerRadius="10dp"
            android:paddingEnd="40dp"
            android:text="Add New Book"
            android:textAllCaps="false" />


    </LinearLayout>

</androidx.core.widget.NestedScrollView>