<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>




    <!--    otp header style for ravepay-->
    <style name="MyRaveOtpHeaderStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>
    <!--    otp tab layout style-->
    <style name="MyRaveTablayoutStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/colorPrimary</item>
    </style>
<!--    otp pin header style-->
    <style name="MyRaveHeaderStyle">
        <item name="android:background">@color/colorPrimary</item>
    </style>



    <style name="Widget.EasyPay.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="hintTextAppearance">@style/TextAppearance.EasyPay.TextInputLayout.HintText</item>
        <!--<item name="hintTextColor">@color/textColorPrimary</item>-->
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColorHint">?attr/colorPrimaryDark</item>
        <!--<item name="boxStrokeColor">@color/textInputOutlineColor</item>-->
    </style>

    <style name="TextAppearance.EasyPay.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

</resources>